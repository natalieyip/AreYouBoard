%head
  %link{:href => "https://fonts.googleapis.com/css?family=Exo", :rel => "stylesheet", :type => "text/css"}/

%p#notice= notice
%h1.games-container-index Games
.games-container-index
  - if @games
    - @games.each do |game|
      .game-container-index
        .game-stats
          .title= link_to game.title, game
          = image_tag game.avatar.url, :class => "img-index"
          .sub-game-stats

%br/
-if current_user
  .games-container-index= link_to 'New Game', new_game_path


